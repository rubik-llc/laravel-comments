{
    "name": "rubik-llc/laravel-comments",
    "description": "Integrate comments easily into Models",
    "keywords": [
        "rubik-llc",
        "laravel",
        "laravel-comments"
    ],
    "homepage": "https://github.com/rubik-llc/laravel-comments",
    "license": "MIT",
    "authors": [
        {
            "name": "Rron Nela",
            "email": "rroni.dev@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Yllndrit Beka",
            "email": "yllndritb@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Rubik\\LaravelComments\\": "src",
            "Rubik\\LaravelComments\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rubik\\LaravelComments\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rubik\\LaravelComments\\LaravelCommentsServiceProvider"
            ],
            "aliases": {
                "LaravelComments": "Rubik\\LaravelComments\\Facades\\LaravelComments"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
